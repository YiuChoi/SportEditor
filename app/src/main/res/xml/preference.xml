<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="微信QQ">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="autoincrement"
            android:summaryOff="倍率增加"
            android:summaryOn="自动增加"
            android:title="修改方式"/>
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="weixin"
            android:summaryOff="关闭"
            android:summaryOn="开启"
            android:title="微信运动修改"/>
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="qq"
            android:summaryOff="关闭"
            android:summaryOn="开启"
            android:title="QQ健康步数修改"/>
        <Preference
            android:summary="自动增加=步数+自增变量*倍率，倍率增加=步数*倍率。\n注意：使用自动增加可能导致QQ不刷新，请自行测试！"
            android:title="使用说明"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="其他计步软件">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="ledong"
            android:summaryOff="关闭"
            android:summaryOn="打开"
            android:title="乐动力修改"/>
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="yuedong"
            android:summaryOff="关闭"
            android:summaryOn="打开"
            android:title="悦动圈步数修改"/>
        <Preference
            android:summary="倍率*步数，若手机无计步器，则为自动刷步，与倍率无关。悦动圈无法翻倍，只能自动刷。"
            android:title="使用说明"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="全局设定">
        <EditTextPreference
            android:defaultValue="100"
            android:inputType="number"
            android:key="magnification"
            android:summary="100"
            android:title="倍率"/>
        <Preference
            android:summary="倍率仅代表修改幅度，不精确修改数值"
            android:title="使用说明"/>
        <Preference
            android:summary="喜欢我的作品就点击这里请我吃辣条吧，O(∩_∩)O哈哈~"
            android:title="支付宝捐赠">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://qr.alipay.com/apoy1zw1o2xpc7915d"/>
        </Preference>
        <Preference android:title="关于"
            android:summary="1.2.0"
            >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://caiyao.name/releases"/>
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>
